<div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<div class="container">
  <div class="row pt-3">
    <% @products.each do |product| %>
      <% if product.photo.attached? %>
      <div class="col-4">
        <div class="card-produtos"
          style="background-image: linear-gradient(260deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.6) 30%), url('<%= cl_image_path product.photo.key, height: 600, width: 600, crop: :fill %>')">
          <div class="card-description">
            <div class="d-flex justify-content-center">
              <div class="card-body">
                <p><%= product.title %></p>
                <p><%= product.localization %></p>
                <p>R$ <%= product.price %></p>
                <p>Quant: <%= product.disponibility %></p>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <h2><%= link_to product.title, product %></h2>          
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
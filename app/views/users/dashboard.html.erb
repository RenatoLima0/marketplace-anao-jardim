<div class="container">
  <div class="content-wrapper text-center">
    <h3 class="text-center">Name:</h3>
    <h5 class="text-center"><%= "#{current_user.name}" %></h5>
    <h3 class="text-center">Email:</h3>
    <h5 class="text-center"><%= current_user.email %></h5>
    <h3 class="text-center">Phone:</h3>
    <h5 class="text-center"><%= current_user.phone %></h5>
    <h3 class="text-center">You have bought <span class ="span-model"><%= current_user.orders.count %> Products:</span></h3>

    <% current_user.orders.each do |x| %>
    <h5 class="text-center"><%= link_to x.product.name, x.product %> at <span class="span-dashboard"><%= x.product.planet %></span> Price: Z$ <%= x.product.price %></h5>
    <% end %>

    <h3 class="my-4 text-center" >Your current products for <span class="span-model">sale:</span></h3>
     <%= link_to 'Create a Colony', new_product_path, class: 'btn btn-outline-primary my-3' %>
    <div class="row d-flex justify-content-around">
      <% current_user.products.each do |product| %>
      <div class="col-md-3 col-sm-6 mb-4 mt-5" >
        <h3><%= link_to product.name, product %></h3>
        <h5 class="text-center">Z$ <%= product.price %></h5>
        <%= cl_image_tag product.photo, class: "d-block w-100 rounded", style: "height: 160px; crop: fill;" %>
        <br>
        <br>
        <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-outline-light btn-sm' %> | <%= link_to "Delete", product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete this flat?" }, class: 'btn btn-outline-danger btn-sm' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

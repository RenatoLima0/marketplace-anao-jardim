<div class="container">
  <div class="content-wrapper simple-form">
    <% if current_user == @user %>
      <h1 style="text-align: center;">Edit profile</h1>

      <%= render 'form', user: current_user %>
      <br>
    <% else %>
      <h3>Sorry <%= current_user.name %>, you can't edit other user's profile.</h3>
    <% end %>
      <br>
    <%= link_to 'Back', dashboard_path, class: 'btn btn-outline-light', style: 'display: block; margin: 0 192px 0 192px;' %>
  </div>
</div>
